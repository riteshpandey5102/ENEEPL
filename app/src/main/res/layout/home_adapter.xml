<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_close_save"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:background="@drawable/ic_close_white"
            />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_save"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:background="@drawable/userprofile_1"
            app:shapeAppearanceOverlay="@style/CircularImageStyle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_close_save"
            />

        <TextView
            android:id="@+id/tv_save_fav_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_save"
            android:fontFamily="@font/poppins_semi_bold"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:layout_marginHorizontal="20dp"
            android:text="@string/save_your_fav_user"
            />

        <EditText
            android:id="@+id/et_paste_link"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@id/btn_save"
            app:layout_constraintStart_toStartOf="@id/tv_save_fav_txt"
            app:layout_constraintTop_toBottomOf="@id/tv_save_fav_txt"
            app:layout_constraintBottom_toBottomOf="parent"
            android:fontFamily="@font/poppins_semi_bold"
            android:background="@drawable/circulartvboarder"
            android:paddingVertical="10dp"
            android:paddingHorizontal="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:layout_marginHorizontal="20dp"
            android:hint="@string/paste_user_link"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_save_fav_txt"
            app:layout_constraintBottom_toBottomOf="parent"
            android:fontFamily="@font/poppins_medium"
            android:background="@drawable/button_rounded_drawable"
            android:paddingVertical="10dp"
            android:backgroundTint="@color/bluetext"
            android:textColor="@color/white"
            android:paddingHorizontal="30dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:layout_marginHorizontal="20dp"
            android:text="@string/save"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/v_divider1"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl_save"
        android:background="@color/grey_bg"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v_divider1"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_post1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/img_icon"
                android:layout_width="45dp"
                android:layout_height="45dp"
                app:shapeAppearanceOverlay="@style/CircularImageStyle"
                android:background="@drawable/userprofile"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginHorizontal="10dp"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="New post "
                android:textSize="13sp"
                android:layout_marginStart="10dp"
                app:layout_constraintBottom_toTopOf="@+id/tv_subtitle"
                app:layout_constraintLeft_toRightOf="@id/img_icon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/tv_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="Healthy Duck - 18h"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@id/tv_title1"
                app:layout_constraintTop_toBottomOf="@+id/tv_title1"
                app:layout_constraintVertical_chainStyle="spread_inside" />

            <TextView
                android:id="@+id/img_options"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:textSize="20dp"
                android:text=". . ."
                android:gravity="top"
                android:textColor="@color/grey"
                android:textAlignment="gravity"
                android:layout_marginEnd="5dp"
                app:layout_constraintBottom_toBottomOf="@id/tv_title1"
                app:layout_constraintTop_toTopOf="@id/tv_title1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_chainStyle="spread_inside" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_save_post"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:paddingHorizontal="20dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/tv_subtitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/circulartvboarder"
                android:backgroundTint="@color/grey_bg"
                >

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text=""
                    android:visibility="gone"
                    android:textSize="13sp"
                    android:fontFamily="@font/poppins_semi_bold"/>

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/img_user_dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:shapeAppearanceOverlay="@style/CircularImageStyle"
                    app:layout_constraintStart_toStartOf="@id/tv_user_name"
                    app:layout_constraintTop_toBottomOf="@id/tv_user_name"
                    android:background="@drawable/userprofile"/>

                <TextView
                    android:id="@+id/tv_user_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/img_user_dp"
                    app:layout_constraintTop_toTopOf="@id/img_user_dp"
                    app:layout_constraintBottom_toBottomOf="@id/img_user_dp"
                    android:layout_marginStart="5dp"
                    android:text="Post saved"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins_regular"/>

                <ImageView
                    android:id="@+id/img_bookmark"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_user_name"
                    app:layout_constraintBottom_toBottomOf="@id/tv_user_username"
                    android:background="@drawable/bookmark"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/img_post_image"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                app:shapeAppearanceOverlay="@style/RoundedRectangle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:visibility="visible"
                app:layout_constraintTop_toBottomOf="@id/cl_save_post"
                android:layout_marginVertical="10dp"
                />

            <TextView
                android:id="@+id/tv_post_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/img_post_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="15sp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/tv_repilies_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_post_details"
                app:layout_constraintStart_toStartOf="parent"
                android:text="View 3 replies"
                android:textSize="13sp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/tv_likes_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_repilies_count"
                app:layout_constraintStart_toStartOf="parent"
                android:text="1 like"
                android:textSize="12sp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/grey"
                android:layout_marginTop="5dp"/>

            <ImageView
                android:id="@+id/img_like"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/like"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="@id/like_comment_divider"
                app:layout_constraintTop_toBottomOf="@id/like_comment_divider"
                />

            <View
                android:id="@+id/like_comment_divider"
                android:layout_width="0.5dp"
                android:layout_height="1dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_likes_count"/>

            <ImageView
                android:id="@+id/img_comment"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/comment"
                app:layout_constraintStart_toStartOf="@id/like_comment_divider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/like_comment_divider"
                />

            <EditText
                android:id="@+id/et_join_conversation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/join_conversation"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/img_like"
                android:background="@drawable/circulartvboarder"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="20dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>